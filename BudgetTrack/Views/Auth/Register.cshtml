    }

    .auth-title {
        font-size: 24px;
        font-weight: 700;
        color: #38bdf8;
        text-align: center;
        margin-bottom: 6px;
    }

    .auth-subtitle {
        font-size: 15px;
        color: #cbd5e1;
        text-align: center;
        margin-bottom: 20px;
    }

    .auth-group {
        margin-bottom: 18px;
    }

        .auth-group label {
            display: block;
            margin-bottom: 6px;
            font-size: 16px;
            color: #e2e8f0;
        }

        .auth-group input,
        .auth-group select {
