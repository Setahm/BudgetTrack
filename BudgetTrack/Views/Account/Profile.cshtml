@model BudgetTrack.Models.User

@{
    ViewData["Title"] = "الملف الشخصي";
}

<div class="admin-wrapper">
    <div class="admin-card" id="card">

        <h2 class="admin-title">الملف الشخصي</h2>
        <p class="admin-subtitle">إدارة بيانات حسابك وتحديث كلمة المرور</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="profile-section">
            <h4 class="section-title">بيانات الحساب</h4>

            <div class="admin-group">
                <label>الاسم</label>
                <input class="admin-input" value="@Model.Name" disabled />
            </div>

            <div class="admin-group">
                <label>البريد الإلكتروني</label>
                <input class="admin-input" value="@Model.Email" disabled />
            </div>

            <div class="admin-group">
                <label>الدور</label>
                <input class="admin-input" value="@Model.Role" disabled />
            </div>

            @if (Model.Company != null)
            {
                <div class="admin-group">
                    <label>الشركة</label>
                    <input class="admin-input" value="@Model.Company.Name" disabled />
                </div>
            }
        </div>

        <hr class="divider" />

        <div class="profile-section">
            <h4 class="section-title">تغيير كلمة المرور</h4>

            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="admin-group">
                    <label>كلمة المرور الحالية</label>
                    <input type="password" name="currentPassword" class="admin-input" required />
                </div>

                <div class="admin-group">
                    <label>كلمة المرور الجديدة</label>
                    <input type="password" name="newPassword" class="admin-input" required />
                </div>

                <button type="submit" class="admin-btn primary">حفظ التغيير</button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("card").classList.add("loaded");
        });
    </script>
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        background-size: 200% 200%;
        font-family: 'Tajawal', sans-serif;
        color: white;
    }

    .admin-wrapper {
        min-height: calc(100vh - 95px - 180px);
        padding: 25px;
        display: flex;
        justify-content: center;
    }

    .admin-card {
        width: 100%;
        max-width: 700px;
        background: rgba(255,255,255,0.06);
        padding: 28px;
        border-radius: 20px;
        backdrop-filter: blur(14px);
        border: 1px solid rgba(255,255,255,0.18);
        opacity: 0;
        transform: translateY(20px) scale(0.95);
        transition: 0.6s ease;
    }

        .admin-card.loaded {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

    .admin-title {
        font-size: 26px;
        font-weight: 700;
        color: #38bdf8;
        text-align: center;
        margin-bottom: 6px;
    }

    .admin-subtitle {
        text-align: center;
        color: #cbd5e1;
        margin-bottom: 22px;
    }

    .profile-section {
        margin-bottom: 18px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #e2e8f0;
        margin-bottom: 12px;
    }

    .admin-group {
        margin-bottom: 14px;
    }

        .admin-group label {
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #e2e8f0;
        }

    .admin-input {
        width: 100%;
        padding: 12px;
        border-radius: 14px;
        border: none;
        background: #e2e8f0;
        color: black;
        font-size: 15px;
        outline: none;
        transition: 0.3s;
        box-sizing: border-box;
    }

        .admin-input:focus {
            box-shadow: 0 0 10px rgba(56,189,248,0.5);
            transform: scale(1.01);
        }

    .divider {
        border: none;
        border-top: 1px solid rgba(148,163,184,0.4);
        margin: 18px 0;
    }

    .admin-btn.primary {
        background: linear-gradient(135deg, #38bdf8, #7dd3fc);
        padding: 10px 18px;
        border-radius: 14px;
        color: #0f172a;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: 0.3s;
    }

        .admin-btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 22px rgba(56,189,248,0.35);
        }

    .alert {
        padding: 10px 14px;
        border-radius: 10px;
        font-size: 14px;
        margin-bottom: 12px;
    }

    .alert-danger {
        background: rgba(248,113,113,0.18);
        color: #fecaca;
        border: 1px solid rgba(248,113,113,0.5);
    }

    .alert-success {
        background: rgba(34,197,94,0.18);
        color: #bbf7d0;
        border: 1px solid rgba(34,197,94,0.5);
    }
</style>