@model BudgetTrack.Models.User

@{
    ViewData["Title"] = "إنشاء حساب مدير";
}

<div class="auth-wrapper">
    <div class="auth-card" id="card">

        <!-- عنوان ترحيبي -->
        <h2 class="auth-title">إنشاء حساب مدير</h2>
        <p class="auth-subtitle">انضم إلى آلاف الشركات التي تدير مصروفاتها بذكاء عبر BudgetTrack</p>

        @if (TempData["ModelErrors"] != null)
        {
            <div class="alert alert-danger">@TempData["ModelErrors"]</div>
        }

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="auth-group">
                <label asp-for="Name">الاسم </label>
                <input asp-for="Name" placeholder="مثال: محمد " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="auth-group">
                <label asp-for="Email">البريد الإلكتروني</label>
                <input asp-for="Email" placeholder="you@company.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="auth-group">
                <label asp-for="CompanyId">الشركة</label>
                <select asp-for="CompanyId" asp-items="ViewBag.Companies"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="auth-group">
                <label asp-for="PasswordHash">كلمة المرور</label>
                <input asp-for="PasswordHash" type="password" placeholder="••••••••" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="auth-group">
                <label>تأكيد كلمة المرور</label>
                <input type="password" name="ConfirmPassword" placeholder="••••••••" />
            </div>

            <div class="auth-options">
                <label>
                    <input type="checkbox" name="agree" required />
                    أوافق على شروط الاستخدام وسياسة الخصوصية
                </label>
            </div>

            <button type="submit" class="uiverse-btn">تسجيل</button>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
        </form>

        <div class="auth-footer">
            <p>لديك حساب بالفعل؟ <a href="/Auth/Login">سجّل الدخول</a></p>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const card = document.getElementById("card");
            card.classList.add("loaded");

            document.body.style.backgroundPosition = "100% 50%";
            setTimeout(() => {
                document.body.style.backgroundPosition = "0% 50%";
            }, 4000);
        });
    </script>
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        background-size: 200% 200%;
