@model BudgetTrack.Models.Company

@{
    ViewData["Title"] = "تعديل شركة";
}

<div class="admin-wrapper">
    <div class="admin-card" id="card">

        <h2 class="admin-title">تعديل شركة</h2>
        <p class="admin-subtitle">قم بتحديث بيانات الشركة داخل النظام</p>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <div class="admin-group">
                <label class="form-label">اسم الشركة</label>
                <input asp-for="Name" class="admin-input" placeholder="اكتب اسم الشركة" />
            </div>

            <div class="admin-group">
                <label class="form-label">الحالة</label>
                <select asp-for="IsActive" class="admin-input">
                    <option value="true">مفعّلة</option>
                    <option value="false">غير مفعّلة</option>
                </select>
            </div>

            <button type="submit" class="admin-btn primary">حفظ</button>
            <a asp-action="Index" class="admin-btn secondary">رجوع</a>
        </form>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("card").classList.add("loaded");
        });
    </script>
}

<style>

    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        background-size: 200% 200%;
        font-family: 'Tajawal', sans-serif;
        color: white;
    }

    .admin-wrapper {
        min-height: calc(100vh - 95px - 180px);
        padding: 25px;
        display: flex;
        justify-content: center;
    }

    .admin-card {
        width: 100%;
        max-width: 500px;
        background: rgba(255,255,255,0.06);
        padding: 32px;
        border-radius: 20px;
        backdrop-filter: blur(14px);
        border: 1px solid rgba(255,255,255,0.18);
        opacity: 0;
        transform: translateY(20px) scale(0.95);
        transition: 0.6s ease;
    }

        .admin-card.loaded {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

    .admin-title {
        font-size: 26px;
        font-weight: 700;
        color: #38bdf8;
        text-align: center;
        margin-bottom: 6px;
    }

    .admin-subtitle {
        text-align: center;
        font-size: 15px;
        color: #cbd5e1;
        margin-bottom: 25px;
    }

    .admin-group {
        margin-bottom: 18px;
    }

    .admin-input {
        width: 100%;
        padding: 14px;
        border-radius: 14px;
        border: none;
        background: #e2e8f0;
        color: black;
        font-size: 16px;
        outline: none;
        transition: 0.3s;
    }

        .admin-input:focus {
            box-shadow: 0 0 12px rgba(56,189,248,0.5);
            transform: scale(1.02);
        }

    .admin-btn {
        display: inline-block;
        padding: 12px 22px;
        border-radius: 14px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.3s;
        margin-left: 8px;
    }

        .admin-btn.primary {
            background: linear-gradient(135deg, #38bdf8, #7dd3fc);
            color: #0f172a;
        }

            .admin-btn.primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(56,189,248,0.35);
            }

        .admin-btn.secondary {
            background: rgba(255,255,255,0.15);
            color: #e2e8f0;
        }

            .admin-btn.secondary:hover {
                background: rgba(255,255,255,0.25);
            }

</style>