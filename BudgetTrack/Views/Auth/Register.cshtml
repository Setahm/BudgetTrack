            background-repeat: no-repeat;
            background-position: left 14px center;
            background-size: 18px;
            padding-left: 40px;
        }

            .auth-group input:focus,
            .auth-group select:focus {
                background: #e2e8f0;
                box-shadow: 0 0 12px rgba(56,189,248,0.5);
                transform: scale(1.02);
            }

    .auth-options {
        margin-bottom: 10px;
        font-size: 14px;
        color: #e2e8f0;
        text-align: right;
    }

        .auth-options input {
            margin-left: 6px;
        }

    .uiverse-btn {
        width: 100%;
        padding: 14px;
        margin-top: 10px;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        background: linear-gradient(135deg, #38bdf8, #7dd3fc);
        color: #0f172a;
        font-size: 18px;
        font-weight: 700;
        transition: 0.3s;
        position: relative;
        overflow: hidden;
    }

        .uiverse-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(56,189,248,0.35);
        }

        .uiverse-btn::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            background: rgba(255,255,255,0.25);
            opacity: 0;
            transition: 0.4s;
        }

        .uiverse-btn:hover::after {
            opacity: 1;
        }

    .alert {
        margin-top: 15px;
        padding: 12px;
        border-radius: 10px;
        font-size: 15px;
    }

    .alert-danger {
        background: rgba(255, 0, 0, 0.2);
        color: #ffb3b3;
    }

    .alert-success {
        background: rgba(0, 255, 0, 0.2);
        color: #b3ffb3;
    }

    .auth-footer {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
        color: #cbd5e1;
    }

        .auth-footer a {
            color: #38bdf8;
            text-decoration: none;
            transition: 0.3s;
        }

            .auth-footer a:hover {
                color: #7dd3fc;
            }
</style>