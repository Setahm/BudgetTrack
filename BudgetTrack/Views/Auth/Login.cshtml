            transform: translateY(0) scale(1);
        }

    .auth-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 2px solid #38bdf8;
        color: #38bdf8;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        font-weight: 700;
        margin: 0 auto 15px;
    }

    .auth-title {
        font-size: 24px;
        font-weight: 700;
        color: #38bdf8;
