    }

        .uiverse-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(56,189,248,0.35);
        }

        .uiverse-btn::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            background: rgba(255,255,255,0.25);
            opacity: 0;
            transition: 0.4s;
        }

        .uiverse-btn:hover::after {
            opacity: 1;
        }

    .alert {
        margin-top: 15px;
        padding: 12px;
        border-radius: 10px;
        font-size: 15px;
    }

    .alert-danger {
        background: rgba(255, 0, 0, 0.2);
        color: #ffb3b3;
    }

    .auth-footer {
        margin-top: 20px;
        font-size: 14px;
        color: #cbd5e1;
    }

        .auth-footer a {
            color: #38bdf8;
            text-decoration: none;
        }

    .security-note {
        margin-top: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        font-size: 14px;
        color: #22c55e;
    }
</style>