@{
    ViewData["Title"] = "الرئيسية";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>

    /* ANIMATION */
    @@keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .reveal {
        opacity: 0;
        transform: translateY(26px);
        transition: opacity .7s ease, transform .7s ease;
    }

        .reveal.visible {
            opacity: 1;
            transform: translateY(0);
        }

    /* GLOBAL */
    section {
        padding: 80px 60px;
    }

    h2.section-title {
        text-align: center;
        font-size: 32px;
        color: #e5f4ff;
        margin-bottom: 12px;
        font-weight: 700;
    }

    p.section-subtitle {
        text-align: center;
        font-size: 15px;
        color: #94a3b8;
        margin-bottom: 40px;
    }

    /* HERO */
    .hero {
        text-align: center;
        padding: 120px 40px 100px;
        background: transparent;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 14px;
        border-radius: 999px;
        background: rgba(15,23,42,0.7);
        border: 1px solid rgba(148,163,184,0.4);
        color: #cbd5f5;
        font-size: 13px;
        margin-bottom: 18px;
    }

        .badge i {
            color: #22c55e;
        }

    .hero-title {
        font-size: 46px;
        font-weight: 700;
        color: #e5f4ff;
        margin-bottom: 16px;
        line-height: 1.2;
    }

        .hero-title span {
            color: #38bdf8;
        }

    .hero-text {
        max-width: 650px;
        margin: 0 auto 28px;
        font-size: 17px;
        line-height: 1.8;
        color: #cbd5f5;
    }

    .hero-buttons {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-top: 10px;
    }

    .btn-primary {
        padding: 12px 28px;
        border-radius: 999px;
        background: linear-gradient(135deg, #38bdf8, #0ea5e9);
        color: #0f172a;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 12px 30px rgba(56,189,248,0.45);
        transition: .25s;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 36px rgba(56,189,248,0.6);
        }

    .btn-ghost {
        padding: 12px 26px;
        border-radius: 999px;
        border: 1px solid rgba(148,163,184,0.6);
        background: rgba(15,23,42,0.85);
        color: #e5f4ff;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: .25s;
    }

        .btn-ghost i {
            color: #38bdf8;
        }

        .btn-ghost:hover {
            border-color: #38bdf8;
            background: rgba(15,23,42,0.95);
        }

    /* FEATURES */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 26px;
    }

    .feature-card {
        background: rgba(255,255,255,0.03);
        border-radius: 18px;
        padding: 24px 22px;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 16px 40px rgba(15,23,42,0.9);
        transition: .25s;
    }

        .feature-card:hover {
            transform: translateY(-4px);
            border-color: #38bdf8;
            box-shadow: 0 20px 50px rgba(15,23,42,1);
        }

    .feature-icon {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at top left, rgba(56,189,248,0.35), transparent 60%), rgba(15,23,42,1);
        color: #7dd3fc;
        margin-bottom: 14px;
        font-size: 18px;
    }

    .feature-card h3 {
        font-size: 17px;
        color: #e5f4ff;
        margin-bottom: 8px;
    }

    .feature-card p {
        font-size: 14px;
        color: #94a3b8;
        line-height: 1.7;
    }

    /* WHY */
    .why-grid {
        display: grid;
        grid-template-columns: minmax(0, 1.2fr) minmax(0, 1.3fr);
        gap: 40px;
        align-items: center;
        background: rgba(255,255,255,0.02);
        padding: 40px;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .why-item {
        display: flex;
        gap: 10px;
        align-items: flex-start;
        font-size: 15px;
        color: #cbd5f5;
        margin-bottom: 12px;
    }

        .why-item i {
            margin-top: 3px;
            color: #22c55e;
        }

    .analytics-card {
        border-radius: 22px;
        padding: 20px;
        background: rgba(15,23,42,0.98);
        border: 1px solid rgba(148,163,184,0.6);
        box-shadow: 0 20px 60px rgba(15,23,42,1);
    }

    .analytics-preview {
        height: 220px;
        border-radius: 16px;
        background: url('https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&w=1200&q=80') center/cover;
        margin-bottom: 14px;
    }

    .analytics-caption {
        font-size: 13px;
        color: #94a3b8;
    }

    /* STATS */
    .stats-row {
        display: flex;
        flex-wrap: wrap;
        gap: 22px;
        justify-content: center;
    }

    .stat-card {
        min-width: 180px;
        padding: 20px 22px;
        border-radius: 18px;
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.06);
        text-align: center;
        box-shadow: 0 16px 40px rgba(15,23,42,1);
    }

        .stat-card h3 {
            font-size: 26px;
            color: #7dd3fc;
            margin-bottom: 6px;
        }

        .stat-card p {
            font-size: 13px;
            color: #94a3b8;
        }

    /* CTA */
    .cta {
        padding: 80px 60px;
        text-align: center;
        background: transparent;
    }

        .cta h2 {
            font-size: 28px;
            color: #e5f4ff;
            margin-bottom: 12px;
        }

        .cta p {
            font-size: 14px;
            color: #94a3b8;
            margin-bottom: 26px;
        }

</style>

