@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="auth-wrapper">
    <div class="auth-card" id="card">

        <!-- عنوان ترحيبي -->
        <h2 class="auth-title">مرحبًا بعودتك</h2>
        <p class="auth-subtitle">سجّل الدخول إلى حسابك في BudgetTrack</p>

        <form asp-action="Login" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()

            <!-- البريد -->
            <div class="auth-group">
                <label>البريد الإلكتروني</label>
                <input type="email" name="email" placeholder="you@company.com" required />
            </div>

            <!-- كلمة المرور -->
            <div class="auth-group">
                <label>كلمة المرور</label>
                <input type="password" name="password" required />

                <div class="forgot-wrapper">
                    <a href="#" class="forgot-link">نسيت كلمة المرور؟</a>
                </div>
            </div>

            <!-- تذكرني -->
            <div class="auth-options">
                <label>
                    <input type="checkbox" name="remember" />
                    تذكرني
                </label>
            </div>

            <!-- زر الدخول -->
            <button type="submit" class="uiverse-btn">
                دخول <i class="fas fa-arrow-left" style="margin-right:8px;"></i>
            </button>
        </form>

        <!-- رسالة خطأ -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["Error"]</div>
        }

        <!-- روابط أسفل -->
        <div class="auth-footer">
            <p>ليس لديك حساب؟ <a href="/Auth/Register">أنشئ حساب الآن</a></p>

            <div class="security-note">
                <i class="fas fa-shield-halved" style="color:#22c55e;"></i>
                <span>أمان على مستوى المؤسسات</span>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const card = document.getElementById("card");
            card.classList.add("loaded");

            document.body.style.backgroundPosition = "100% 50%";
            setTimeout(() => {
                document.body.style.backgroundPosition = "0% 50%";
            }, 4000);
        });
    </script>
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        background-size: 200% 200%;
        transition: background-position 8s ease;
