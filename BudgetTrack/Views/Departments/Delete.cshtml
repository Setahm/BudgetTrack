@model BudgetTrack.Models.Department

<div class="page-container fade-in">

    <div class="header-row">
        <h2 class="page-title">حذف القسم</h2>
    </div>

    <div class="table-wrapper fade-in">

        <div class="alert-box">
            ⚠️ هل أنتِ متأكدة أنك تريدين حذف هذا القسم؟
            <br />
            هذا الإجراء لا يمكن التراجع عنه.
        </div>

        <form asp-action="Delete" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>اسم القسم</label>
                <input class="input-field disabled-field" value="@Model.Name" disabled />
            </div>

            <div class="form-group">
                <label>الميزانية السنوية</label>
                <input class="input-field disabled-field" value="@Model.AnnualBudget" disabled />
            </div>

            <div class="form-group">
                <label>السنة المالية</label>
                <input class="input-field disabled-field" value="@Model.Year" disabled />
            </div>

            <div class="form-group">
                <label>نوع الفترة</label>
                <input class="input-field disabled-field" value="@Model.PeriodType" disabled />
            </div>

            <div class="actions" style="margin-top:25px;">
                <button type="submit" class="delete-btn">تأكيد الحذف</button>
                <a href="@Url.Action("Index")" class="back-btn">رجوع</a>
            </div>

        </form>

    </div>

</div>

<style>

    /* نفس ستايل الإندكس */

    .page-container {
        max-width: 100%;
        padding: 40px 60px;
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .page-title {
        font-size: 32px;
        color: #f87171;
        text-shadow: 0 0 14px rgba(239,68,68,0.5);
    }

    .table-wrapper {
        background: rgba(255,255,255,0.02);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 20px rgba(239,68,68,0.08);
    }

    .alert-box {
        background: rgba(239,68,68,0.15);
        border: 1px solid rgba(239,68,68,0.4);
        padding: 18px;
        border-radius: 12px;
        color: #fca5a5;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 22px;
    }

        .form-group label {
            color: #fca5a5;
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }

    .input-field {
        background: #0f172a;
        border: 1px solid rgba(255,255,255,0.08);
        color: white;
        border-radius: 12px;
        padding: 12px 14px;
        width: 100%;
        transition: 0.25s ease;
        font-size: 16px;
    }

    .disabled-field {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .delete-btn {
        background: #ef4444;
        padding: 12px 24px;
        border-radius: 14px;
        color: white;
        font-weight: 700;
        border: none;
        transition: 0.3s ease;
        cursor: pointer;
        box-shadow: 0 0 10px rgba(239,68,68,0.4);
    }

        .delete-btn:hover {
            background: #dc2626;
            transform: translateY(-3px);
            box-shadow: 0 0 14px rgba(239,68,68,0.6);
        }

    .back-btn {
        padding: 12px 24px;
        background: #4b5563;
        border-radius: 14px;
        color: white;
        font-weight: 600;
        text-decoration: none;
        transition: 0.3s ease;
        box-shadow: 0 0 10px rgba(255,255,255,0.05);
        margin-right: 10px;
    }

        .back-btn:hover {
            background: #3b82f6;
            transform: translateY(-2px);
            box-shadow: 0 0 16px rgba(59,130,246,0.6);
        }

    .fade-in {
        animation: fadeIn 0.8s ease-in-out both;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

</style>