            color: #38bdf8;
        }

    .auth-options {
        margin-bottom: 10px;
        font-size: 14px;
        color: #e2e8f0;
        text-align: right;
    }

        .auth-options input {
            margin-left: 6px;
        }

    .uiverse-btn {
        width: 100%;
        padding: 14px;
        margin-top: 10px;
        border: none;
        border-radius: 14px;
