@model List<BudgetTrack.Models.Company>

@{
    ViewData["Title"] = "الشركات";
}

<div class="admin-wrapper">
    <div class="admin-card" id="card">

        <h2 class="admin-title">الشركات</h2>
        <p class="admin-subtitle">إدارة الشركات المسجّلة داخل النظام</p>

        @if (ViewBag.PendingUsersCount > 0)
        {
            <div class="pending-alert">
                <span>
                    لديك <strong>@ViewBag.PendingUsersCount</strong> مستخدمين ينتظرون الموافقة
                </span>

                <a href="/AdminDashboard/PendingUsers" class="alert-btn">
                    عرض المستخدمين
                </a>
            </div>
        }

        <div class="top-actions">
            <a asp-action="Create" class="admin-btn primary">إضافة شركة جديدة</a>
        </div>

        <div class="table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>اسم الشركة</th>
                        <th>الحالة</th>
                        <th>تاريخ الإنشاء</th>
                        <th>عدد الأقسام</th>
                        <th>عدد المستخدمين</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var company in Model)
                        {
                            <tr>
                                <td>@company.Name</td>
                                <td class="@(company.IsActive ? "active-status" : "inactive-status")">
                                    @(company.IsActive ? "مفعّلة" : "غير مفعّلة")
                                </td>
                                <td>@company.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>@(company.Departments?.Count() ?? 0)</td>
                                <td>@(company.Users?.Count() ?? 0)</td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@company.Id" class="table-btn edit">تعديل</a>

                                    <!-- زر الحذف مع عدد المستخدمين -->
                                    <button class="table-btn delete"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@company.Id"
                                            data-name="@company.Name"
                                            data-users="@company.Users?.Count() ?? 0">
                                        حذف
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="empty-row">لا توجد شركات حالياً</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- ========================= -->
<!--      DELETE MODAL         -->
<!-- ========================= -->

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content delete-modal">

            <div class="modal-header">
                <h5 class="modal-title">تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p>هل أنت متأكد أنك تريد حذف الشركة:</p>
                <h4 id="companyName" class="company-name"></h4>

                <!-- تنبيه إذا الشركة تحتوي على مستخدمين -->
                <div id="deleteWarning" class="delete-warning" style="display:none;">
                    ⚠ لا يمكن حذف الشركة لأنها تحتوي على مستخدمين مرتبطين.
                </div>
            </div>

            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="submit" class="admin-btn danger">نعم، حذف</button>
                </form>

                <button class="admin-btn secondary" data-bs-dismiss="modal">إلغاء</button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("card").classList.add("loaded");
        });

        const deleteModal = document.getElementById('deleteModal');

        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;

            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const users = parseInt(button.getAttribute('data-users'));

            document.getElementById('companyName').textContent = name;

            const form = document.getElementById('deleteForm');
            const warning = document.getElementById('deleteWarning');
            const deleteBtn = form.querySelector('button[type="submit"]');

            if (users > 0) {
                warning.style.display = "block";
                deleteBtn.disabled = true;
                form.action = "#";
            } else {
                warning.style.display = "none";
                deleteBtn.disabled = false;
                form.action = `/AdminDashboard/DeleteConfirmed/${id}`;
            }
        });
    </script>
}

